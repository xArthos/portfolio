{
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "pretty": true,
      "sourceMap": true,
      "target": "es6", 
      "outDir": "./dist",
      "rootDir": "./src",
      "baseUrl": "./lib",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "lib": ["ES2015.Promise", "ES5"],
      "allowJs": false,
      "alwaysStrict": true,
      "strict": true,
      "paths": {
        "@/*": ["./src/*"] 
      }
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      ".vscode"
    ]
  }